# ===========================================
# Unity Meet Environment Configuration
# ===========================================

# Database (DigitalOcean PostgreSQL)
DATABASE_URL="postgresql://user:password@host:25060/unity_meet?sslmode=require"

# NextAuth Configuration
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="https://meet.byunity.net"

# Application URL
NEXT_PUBLIC_APP_URL="https://meet.byunity.net"

# Jitsi Self-Hosted Configuration
JITSI_DOMAIN="jitsi.byunity.net"
JITSI_JWT_APP_ID="unity-meet"
JITSI_JWT_SECRET="your-jwt-secret-here"
NEXT_PUBLIC_JITSI_DOMAIN="jitsi.byunity.net"

# Email Service (Resend)
RESEND_API_KEY="re_xxxxxxxxxxxxx"
EMAIL_FROM="Unity Meet <noreply@byunity.net>"

# Domain Restriction (for user registration)
ALLOWED_EMAIL_DOMAINS="unityfinancialnetwork.com"

# DigitalOcean Spaces (for recordings)
DO_SPACES_ENDPOINT="https://nyc3.digitaloceanspaces.com"
DO_SPACES_BUCKET="meet-by-unity"
DO_SPACES_KEY="your-spaces-key"
DO_SPACES_SECRET="your-spaces-secret"
DO_SPACES_REGION="nyc3"

# ===========================================
# Unity Shield Security Middleware (Optional)
# ===========================================
# Get your API key from Unity Sentinel dashboard

SHIELD_API_KEY="your-shield-api-key"
SENTINEL_URL="https://unity-sentinel-u8gbx.ondigitalocean.app/api"
SHIELD_APP_ID="unity-meet"
REDIS_URL="rediss://user:password@host:port"
SHIELD_DEBUG="false"
